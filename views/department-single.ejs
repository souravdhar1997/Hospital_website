<!-- head -->
<%- include('./common/head.ejs') %>

<!-- navbar -->
<%- include('./common/navbar.ejs') %>

<section class="page-title" style="background: url('/<%= titleData[3].image %>') no-repeat 50% 50%; background-size: cover; position: relative;">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="block text-center">
            <span class="text-white"><%= titleData[3].subtitle %></span>
            <h1 class="text-capitalize mb-5 text-lg"><%= singleDepartment.department %></h1>
          </div>
        </div>
      </div>
    </div>
  </section>

<section class="section department-single">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="department-img">
                    <img src="/<%= singleDepartment.image %>" alt="<%= singleDepartment.title %>" class="img-fluid">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="department-content mt-5">
                    <h3 class="text-md"><%= singleDepartment.title %></h3>
                    <div class="divider my-4"></div>
                    <p class="lead"><%= singleDepartment.description %></p>
                    <p><%= singleDepartment.details %></p>

                    <h3 class="mt-5 mb-4">Services features</h3>
                    <div class="divider my-4"></div>
                    <ul class="list-unstyled department-service">
                        <% singleDepartment.services.features.forEach(service => { %>
                            <li><i class="icofont-check mr-2"></i><%= service %></li>
                        <% }) %>
                    </ul>

                    <a href="/appointment" class="btn btn-main-2 btn-round-full">Make an Appointment<i class="icofont-simple-right ml-2"></i></a>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="sidebar-widget schedule-widget mt-5">
                    <h5 class="mb-4">Time Schedule</h5>

                    <ul class="list-unstyled">
                        <li class="d-flex justify-content-between align-items-center">
                            <span>Monday - Friday</span>
                            <span><%= singleDepartment.timings.mondayToFriday %></span>
                        </li>
                        <li class="d-flex justify-content-between align-items-center">
                            <span>Saturday</span>
                            <span><%= singleDepartment.timings.saturday %></span>
                        </li>
                        <li class="d-flex justify-content-between align-items-center">
                            <span>Sunday</span>
                            <span><%= singleDepartment.timings.sunday %></span>
                        </li>
                    </ul>

                    <div class="sidebar-contact-info mt-4">
                        <p class="mb-0">Need Urgent Help?</p>
                        <h3><%= singleDepartment.timings.contactNumber %></h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- footer -->
<%- include('./common/footer.ejs') %>
