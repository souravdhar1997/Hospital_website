<%- include("./partials/head.ejs") %>

<!-- Page Wrapper -->
<div id="wrapper">

    <%- include("./partials/sidebar.ejs") %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <%- include("./partials/top-nav.ejs") %>

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <!-- Feature -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Features</h6>
                    </div>
                    <div class="card-body">
                        <button class="btn btn-success mb-3" data-toggle="modal" data-target="#createFeatureModal">Create</button>
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Sl. No</th>
                                        <th>Service</th>
                                        <th>Appointment Type</th>
                                        <th>Description</th>
                                        <th>Hours</th>
                                        <th>Emergency</th>
                                        <th>Emergency Note</th>
                                        <th>Actions1</th>
                                        <th>Action2</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% let slNo = 1; %>
                                    <% if(features.length > 0) { %>
                                    <% features.forEach(feature => { %>
                                    <tr>
                                        <td><%= slNo++ %></td>
                                        <td><%= feature.service %></td>
                                        <td><%= feature.appointment_type %></td>
                                        <td><%= feature.description %></td>
                                        <td>
                                            <ul>
                                                <li>Sun - Wed: <%= feature.hours.get('Sun - Wed') %></li>
                                                <li>Thu - Fri: <%= feature.hours.get('Thu - Fri') %></li>
                                                <li>Sat - Sun: <%= feature.hours.get('Sat - Sun') %></li>
                                            </ul>
                                        </td>
                                        <td><%= feature.emergency %></td>
                                        <td><%= feature.em_note %></td>
                                        <td>
                                            <button class="btn btn-primary" data-toggle="modal"
                                                data-target="#editFeatureModal<%= feature._id %>">Edit</button>
                                        </td>
                                        <td>
                                            <button class="btn btn-danger" data-toggle="modal"
                                                data-target="#deleteFeatureModal<%= feature._id %>">Delete</button>
                                        </td>
                                    </tr>
                                    <% })} else { %>
                                        <tr>
                                            <td colspan="9">No Data Found</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- End Feature -->

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <%- include("./partials/footer.ejs") %>

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Create Feature Modal -->
<div class="modal fade" id="createFeatureModal" tabindex="-1" role="dialog" aria-labelledby="createFeatureModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createFeatureModalLabel">Create Feature</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/admin/create-feature" method="POST">
                    <div class="form-group">
                        <label for="service">Service</label>
                        <input type="text" class="form-control" id="service" name="service" required>
                    </div>
                    <div class="form-group">
                        <label for="appointment_type">Appointment Type</label>
                        <input type="text" class="form-control" id="appointment_type" name="appointment_type" required>
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="hours['Sun - Wed']">Hours (Sun - Wed)</label>
                        <input type="text" class="form-control" id="hours['Sun - Wed']" name="hours['Sun - Wed']" required>
                    </div>
                    <div class="form-group">
                        <label for="hours['Thu - Fri']">Hours (Thu - Fri)</label>
                        <input type="text" class="form-control" id="hours['Thu - Fri']" name="hours['Thu - Fri']" required>
                    </div>
                    <div class="form-group">
                        <label for="hours['Sat - Sun']">Hours (Sat - Sun)</label>
                        <input type="text" class="form-control" id="hours['Sat - Sun']" name="hours['Sat - Sun']" required>
                    </div>
                    <div class="form-group">
                        <label for="emergency">Emergency</label>
                        <input type="text" class="form-control" id="emergency" name="emergency" required>
                    </div>
                    <div class="form-group">
                        <label for="em_note">Emergency Note</label>
                        <textarea class="form-control" id="em_note" name="em_note" rows="3" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Create</button>
                </form>
            </div>
        </div>
    </div>
</div>

<% features.forEach(feature => { %>
<!-- Edit Feature Modal -->
<div class="modal fade" id="editFeatureModal<%= feature._id %>" tabindex="-1" role="dialog"
    aria-labelledby="editFeatureModalLabel<%= feature._id %>" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editFeatureModalLabel<%= feature._id %>">Edit Feature</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/admin/edit-feature/<%= feature._id %>" method="POST">
                    <div class="form-group">
                        <label for="service<%= feature._id %>">Service</label>
                        <input type="text" class="form-control" id="service<%= feature._id %>"
                            name="service" value="<%= feature.service %>" required>
                    </div>
                    <div class="form-group">
                        <label for="appointment_type<%= feature._id %>">Appointment Type</label>
                        <input type="text" class="form-control" id="appointment_type<%= feature._id %>"
                            name="appointment_type" value="<%= feature.appointment_type %>" required>
                    </div>
                    <div class="form-group">
                        <label for="description<%= feature._id %>">Description</label>
                        <textarea class="form-control" id="description<%= feature._id %>"
                            name="description" rows="3" required><%= feature.description %></textarea>
                    </div>
                    <div class="form-group">
                        <label for="hours['Sun - Wed']<%= feature._id %>">Hours (Sun - Wed)</label>
                        <input type="text" class="form-control" id="hours['Sun - Wed']<%= feature._id %>"
                            name="hours['Sun - Wed']" value="<%= feature.hours.get('Sun - Wed') %>" required>
                    </div>
                    <div class="form-group">
                        <label for="hours['Thu - Fri']<%= feature._id %>">Hours (Thu - Fri)</label>
                        <input type="text" class="form-control" id="hours['Thu - Fri']<%= feature._id %>"
                            name="hours['Thu - Fri']" value="<%= feature.hours.get('Thu - Fri') %>" required>
                    </div>
                    <div class="form-group">
                        <label for="hours['Sat - Sun']<%= feature._id %>">Hours (Sat - Sun)</label>
                        <input type="text" class="form-control" id="hours['Sat - Sun']<%= feature._id %>"
                            name="hours['Sat - Sun']" value="<%= feature.hours.get('Sat - Sun') %>" required>
                    </div>
                    <div class="form-group">
                        <label for="emergency<%= feature._id %>">Emergency</label>
                        <input type="text" class="form-control" id="emergency<%= feature._id %>"
                            name="emergency" value="<%= feature.emergency %>" required>
                    </div>
                    <div class="form-group">
                        <label for="em_note<%= feature._id %>">Emergency Note</label>
                        <textarea class="form-control" id="em_note<%= feature._id %>"
                            name="em_note" rows="3" required><%= feature.em_note %></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete Feature Modal -->
<div class="modal fade" id="deleteFeatureModal<%= feature._id %>" tabindex="-1" role="dialog"
    aria-labelledby="deleteFeatureModalLabel<%= feature._id %>" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteFeatureModalLabel<%= feature._id %>">Delete Feature</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this feature?</p>
                <form action="/admin/delete-feature/<%= feature._id %>" method="POST">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
<% }) %>

<!-- DataTable -->
<script>
    $(document).ready(function() {
        $('#dataTable').DataTable();
    });
</script>