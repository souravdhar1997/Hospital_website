<%- include("./partials/head.ejs") %>

<!-- Page Wrapper -->
<div id="wrapper">
    <%- include("./partials/sidebar.ejs") %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            <%- include("./partials/top-nav.ejs") %>

            <!-- Begin Page Content -->
            <div class="container-fluid">
                <!-- Page Heading -->
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800">About Home</h1>
                    <button class="btn btn-success" data-toggle="modal" data-target="#createAboutModal">Create</button>
                </div>

                <!-- About Sections Table -->
                <div class="card shadow mb-4">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Images</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% aboutHome.forEach(section => { %>
                                        <tr>
                                            <td><%= section.title %></td>
                                            <td><%= section.description %></td>
                                            <td>
                                                <% section.images.forEach(image => { %>
                                                    <img src="/<%= image %>" alt="image" height="50">
                                                <% }) %>
                                            </td>
                                            <td>
                                                <button class="btn btn-primary" data-toggle="modal" data-target="#editAboutModal<%= section._id %>">Edit</button>
                                            </td>
                                            <td>
                                                <button class="btn btn-danger" data-toggle="modal" data-target="#deleteAboutModal<%= section._id %>">Delete</button>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Begin Page Content -->
        </div>
        <!-- End of Main Content -->

        <%- include("./partials/footer.ejs") %>
    </div>
</div>

<!-- Create About Modal -->
<div class="modal fade" id="createAboutModal" tabindex="-1" role="dialog" aria-labelledby="createAboutModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form action="/admin/create-aboutSection" method="POST" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title" id="createAboutModalLabel">Create About Section</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="title" name="title" required>
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
                    </div>
                    
                    <div class="form-group">
                        <label for="images">Images</label>
                        <input type="file" class="form-control" id="images" name="images" multiple required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit About Modals -->
<% aboutHome.forEach(section => { %>
<div class="modal fade" id="editAboutModal<%= section._id %>" tabindex="-1" role="dialog" aria-labelledby="editAboutModalLabel<%= section._id %>" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form action="/admin/edit-aboutSection/<%= section._id %>" method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title" id="editAboutModalLabel<%= section._id %>">Edit About Section</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="title<%= section._id %>">Title</label>
                        <input type="text" class="form-control" id="title<%= section._id %>" name="title" value="<%= section.title %>" required>
                    </div>
                    <div class="form-group">
                        <label for="description<%= section._id %>">Description</label>
                        <textarea class="form-control" id="description<%= section._id %>" name="description" rows="3" required><%= section.description %></textarea>
                    </div>
                    
                    <div class="form-group">
                        <label for="images<%= section._id %>">Images</label>
                        <input type="file" class="form-control" id="images<%= section._id %>" name="images" multiple>
                        <small>Upload new images to replace existing ones.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% }) %>

<!-- Delete About Modals -->
<% aboutHome.forEach(section => { %>
<div class="modal fade" id="deleteAboutModal<%= section._id %>" tabindex="-1" role="dialog" aria-labelledby="deleteAboutModalLabel<%= section._id %>" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteAboutModalLabel<%= section._id %>">Delete About Section</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this section?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <form action="/admin/delete-aboutSection/<%= section._id %>" method="POST">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
<% }) %>

<!-- Datatable -->
<script>
    $(document).ready(function() {
        $('#dataTable').DataTable();
    });
</script>