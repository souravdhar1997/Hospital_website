<%- include("./partials/head.ejs") %>

<!-- Page Wrapper -->
<div id="wrapper">

    <%- include("./partials/sidebar.ejs") %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <%- include("./partials/top-nav.ejs") %>

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800">Our Contact Information</h1>
                </div>
                <div class="card-body">
                    <button class="btn btn-success mb-3" data-toggle="modal" data-target="#createContactInfoModal">Create</button>
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Sl. No</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Address</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% let slNo = 1; %>
                                <% if(contactInfo.length > 0) { %>
                                <% contactInfo.forEach(info => { %>
                                <tr>
                                    <td><%= slNo++ %></td>
                                    <td><%= info.phone %></td>
                                    <td><%= info.email %></td>
                                    <td><%= info.address %></td>
                                    <td>
                                        <button class="btn btn-primary" data-toggle="modal"
                                            data-target="#editContactInfoModal<%= info._id %>">Edit</button>
                                    </td>
                                    <td>
                                        <button class="btn btn-danger" data-toggle="modal"
                                            data-target="#deleteContactInfoModal<%= info._id %>">Delete</button>
                                    </td>
                                </tr>
                                <% })} else { %>
                                    <tr>
                                        <td colspan="6">No Data Found</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- End Begin Page Content -->
        </div>
        <!-- End of Main Content -->

        <%- include("./partials/footer.ejs") %>

        <!-- Modals -->
        <!-- Create Contact Info Modal -->
        <div class="modal fade" id="createContactInfoModal" tabindex="-1" role="dialog" aria-labelledby="createContactInfoModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="createContactInfoModalLabel">Create Contact Information</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form action="/admin/hospitalContact/create" method="POST">
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="phone">Phone</label>
                                <input type="text" class="form-control" id="phone" name="phone" required>
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" name="email" required>
                            </div>
                            <div class="form-group">
                                <label for="address">Address</label>
                                <input type="text" class="form-control" id="address" name="address" required>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Edit Contact Info Modal -->
        <% contactInfo.forEach(info => { %>
        <div class="modal fade" id="editContactInfoModal<%= info._id %>" tabindex="-1" role="dialog" aria-labelledby="editContactInfoModalLabel<%= info._id %>" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editContactInfoModalLabel<%= info._id %>">Edit Contact Information</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form action="/admin/hospitalContact/edit/<%= info._id %>" method="POST">
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="phone<%= info._id %>">Phone</label>
                                <input type="text" class="form-control" id="phone<%= info._id %>" name="phone" value="<%= info.phone %>" required>
                            </div>
                            <div class="form-group">
                                <label for="email<%= info._id %>">Email</label>
                                <input type="email" class="form-control" id="email<%= info._id %>" name="email" value="<%= info.email %>" required>
                            </div>
                            <div class="form-group">
                                <label for="address<%= info._id %>">Address</label>
                                <input type="text" class="form-control" id="address<%= info._id %>" name="address" value="<%= info.address %>" required>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <% }) %>

        <!-- Delete Contact Info Modal -->
        <% contactInfo.forEach(info => { %>
        <div class="modal fade" id="deleteContactInfoModal<%= info._id %>" tabindex="-1" role="dialog" aria-labelledby="deleteContactInfoModalLabel<%= info._id %>" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteContactInfoModalLabel<%= info._id %>">Delete Contact Information</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form action="/admin/hospitalContact/delete/<%= info._id %>" method="POST">
                        <div class="modal-body">
                            <p>Are you sure you want to delete this contact information?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <% }) %>
        <!-- End of Modals -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->


<!-- DataTable -->
<script>
    $(document).ready(function() {
        $('#dataTable').DataTable();
    });
</script>