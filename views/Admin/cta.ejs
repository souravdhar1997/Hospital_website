<%- include("./partials/head.ejs") %>

<!-- Page Wrapper -->
<div id="wrapper">

    <%- include("./partials/sidebar.ejs") %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <%- include("./partials/top-nav.ejs") %>

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Section Cta Page</h6>
                    </div>

                    <div class="card-body">
                        <button class="btn btn-success mb-3" data-toggle="modal" data-target="#createCtaModal">Create</button>
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Sl. No</th>
                                        <th>Title</th>
                                        <th>Image</th>
                                        <th>Action1</th>
                                        <th>Action2</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% let slNo = 1; %>
                                    <% if(cta.length > 0) { %>
                                    <% cta.forEach(cta => { %>
                                    <tr>
                                        <td><%= slNo++ %></td>
                                        <td><%= cta.title %></td>
                                        <td><img src="/<%= cta.image %>" alt="" height="70"></td>
                                        <td>
                                            <button class="btn btn-primary" data-toggle="modal"
                                                data-target="#editCtaModal<%= cta._id %>">Edit</button>
                                        </td>
                                        <td>
                                            <button class="btn btn-danger" data-toggle="modal"
                                                data-target="#deleteCtaModal<%= cta._id %>">Delete</button>
                                        </td>
                                    </tr>
                                    <% }) %>
                                    <% } else { %>
                                    <tr>
                                        <td colspan="9">No Data Found</td>
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- End Page Heading -->

                <!-- Create CTA Modal -->
                <div class="modal fade" id="createCtaModal" tabindex="-1" role="dialog" aria-labelledby="createCtaModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="createCtaModalLabel">Create Feature</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <form action="/admin/cta/create" method="POST" enctype="multipart/form-data">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="title">Title</label>
                                        <input type="text" class="form-control" id="title" name="title" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="image">Image</label>
                                        <input type="file" class="form-control-file" id="image" name="image" required>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- End Create CTA Modal -->

                <!-- Edit CTA Modal -->
                <% cta.forEach(cta => { %>
                <div class="modal fade" id="editCtaModal<%= cta._id %>" tabindex="-1" role="dialog" aria-labelledby="editCtaModalLabel<%= cta._id %>" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="editCtaModalLabel<%= cta._id %>">Edit Feature</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <form action="/admin/cta/edit/<%= cta._id %>" method="POST" enctype="multipart/form-data">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="title">Title</label>
                                        <input type="text" class="form-control" id="title" name="title" value="<%= cta.title %>" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="image">Image</label>
                                        <input type="file" class="form-control-file" id="image" name="image">
                                        <small class="form-text text-muted">Leave blank to keep the current image.</small>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">Save changes</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <% }) %>
                <!-- End Edit CTA Modal -->

                <!-- Delete CTA Modal -->
                <% cta.forEach(cta => { %>
                <div class="modal fade" id="deleteCtaModal<%= cta._id %>" tabindex="-1" role="dialog" aria-labelledby="deleteCtaModalLabel<%= cta._id %>" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteCtaModalLabel<%= cta._id %>">Delete Feature</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <form action="/admin/cta/delete/<%= cta._id %>" method="POST">
                                <div class="modal-body">
                                    <p>Are you sure you want to delete this feature?</p>
                                    <p><strong>Title:</strong> <%= cta.title %></p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <% }) %>
                <!-- End Delete CTA Modal -->

            </div>
            <!-- End of Page Content -->

        </div>
        <!-- End of Main Content -->

        <%- include("./partials/footer.ejs") %>

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- DataTable -->
<script>
    $(document).ready(function() {
        $('#dataTable').DataTable();
    });
  </script>