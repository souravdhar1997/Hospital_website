<%- include("./partials/head.ejs") %>

<!-- Page Wrapper -->
<div id="wrapper">

    <%- include("./partials/sidebar.ejs") %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <%- include("./partials/top-nav.ejs") %>

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800">Blog</h1>
                </div>
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">All Blogs</h6>
                    </div>
                    <div class="card shadow mb-4">
                        <div class="card-body">
                            <button class="btn btn-success mb-3" data-toggle="modal" data-target="#createBlogModal">Create</button>
                            <div class="table-responsive">
                                <table class="table table-bordered" id="myTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Sl. No</th>
                                            <th>Title</th>
                                            <th>Author</th>
                                            <th>Excerpt</th>
                                            <th>Content</th>
                                            <th>Date</th>
                                            <th>Category</th>
                                            <th>Views</th>
                                            <th>Image</th>
                                            <th>Status</th>
                                            <th>Update</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% let slNo = 1 %>
                                        <% blogs.forEach(blog => { %>
                                        <tr>
                                            <td><%= slNo++ %></td>
                                            <td><%= blog.title %></td>
                                            <td><%= blog.author %></td>
                                            <td><%= blog.excerpt.slice(0,100) %></td>
                                            <td><%= blog.content.slice(0,100) %></td>
                                            <td><%= blog.date.toDateString() %></td>
                                            <td><%= blog.category.name %></td>
                                            <td><%= blog.views %></td>
                                            <td><img src="/<%= blog.image %>" alt="Blog Image" height="100"></td>
                                            <% if(blog.status != 1) { %>
                                            <td>
                                                <a href="/admin/activeBlog/<%- blog._id %>" class="btn btn-success">Active</a>
                                            </td>
                                            <% } else { %>
                                            <td>
                                                <a href="/admin/deactiveBlog/<%- blog._id %>" class="btn btn-danger">Deactive</a>
                                            </td>
                                            <% } %>
                                            <td>
                                                <button class="btn btn-primary" data-toggle="modal" data-target="#editBlogModal<%= blog._id %>">Edit</button>
                                                <!-- Edit Blog Modal -->
                                                <div class="modal fade" id="editBlogModal<%= blog._id %>" tabindex="-1" role="dialog" aria-labelledby="editBlogModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="editBlogModalLabel">Edit Blog</h5>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <form action="/admin/update_blog/<%= blog._id %>" method="POST" enctype="multipart/form-data">
                                                                    <div class="form-group">
                                                                        <label for="title">Title</label>
                                                                        <input type="text" class="form-control" id="title" name="title" value="<%= blog.title %>">
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label for="author">Author</label>
                                                                        <input type="text" class="form-control" id="author" name="author" value="<%= blog.author %>">
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label for="excerpt">Excerpt</label>
                                                                        <textarea class="form-control" id="excerpt" name="excerpt"><%= blog.excerpt %></textarea>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label for="content">Content</label>
                                                                        <textarea class="form-control" id="content" name="content"><%= blog.content %></textarea>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label for="date">Date</label>
                                                                        <input type="date" class="form-control" id="date" name="date" value="<%= blog.date.toISOString().split('T')[0] %>">
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label for="category">Category</label>
                                                                        <select class="form-control" id="category" name="category">
                                                                            <% categories.forEach(category => { %>
                                                                                <option value="<%= category._id %>" <%= category._id.equals(blog.category._id) ? 'selected' : '' %>><%= category.name %></option>
                                                                            <% }) %>
                                                                        </select>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label for="image">Image</label>
                                                                        <input type="file" class="form-control" id="image" name="image">
                                                                    </div>
                                                                    <button type="submit" class="btn btn-primary">Save changes</button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <button class="btn btn-danger" data-toggle="modal" data-target="#deleteBlogModal<%= blog._id %>">Delete</button>
                                                <!-- Delete Blog Modal -->
                                                <div class="modal fade" id="deleteBlogModal<%= blog._id %>" tabindex="-1" role="dialog" aria-labelledby="deleteBlogModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="deleteBlogModalLabel">Delete Blog</h5>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <p>Are you sure you want to delete this blog?</p>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <form action="/admin/deleteBlog/<%= blog._id %>" method="POST">
                                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                                    <button type="submit" class="btn btn-danger">Delete</button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <!-- End Begin Page Content -->
        </div>
        <!-- End of Main Content -->

        <%- include("./partials/footer.ejs") %>
    </div>
</div>

<!-- Create Blog Modal -->
<div class="modal fade" id="createBlogModal" tabindex="-1" role="dialog" aria-labelledby="createBlogModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createBlogModalLabel">Create Blog</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/admin/blog/create" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="title" name="title">
                    </div>
                    <div class="form-group">
                        <label for="author">Author</label>
                        <input type="text" class="form-control" id="author" name="author">
                    </div>
                    <div class="form-group">
                        <label for="excerpt">Excerpt</label>
                        <textarea class="form-control" id="excerpt" name="excerpt"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="content">Content</label>
                        <textarea class="form-control" id="content" name="content"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="date">Date</label>
                        <input type="date" class="form-control" id="date" name="date">
                    </div>
                    <div class="form-group">
                        <label for="category">Category</label>
                        <select class="form-control" id="category" name="category">
                            <% categories.forEach(category => { %>
                                <option value="<%= category._id %>"><%= category.name %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="image">Image</label>
                        <input type="file" class="form-control" id="image" name="image">
                    </div>
                    <button type="submit" class="btn btn-primary">Create Blog</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- DataTable -->
<script>
    $(document).ready(function() {
        $('#myTable').DataTable();
    });
</script>