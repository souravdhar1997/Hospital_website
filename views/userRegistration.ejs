<!-- navbar -->
<%- include('./common/navbar.ejs')%>

<body class="form-v7">
	<div class="page-content">
		<div class="form-v7-content">
			<div class="form-left">
				<img src="/UserRegistration/images/form-v7.jpg" alt="form">
				<p class="text-1">User Sign Up</p>
				<p class="text-2">Privaci policy & Term of service</p>
			</div>
				
			<form class="form-detail" action="/register" method="post" id="myform">
					<!-- flash -->
					<% if(flashMessage2.length>0){ %>
					<div class="alert alert-danger"><%= flashMessage2 %></div>
					<% } %>
					<% if(flashMessage1.length>0){ %>
						<div class="alert alert-success"><%= flashMessage1 %></div>
						<% } %>
				<div class="form-row">
					<label for="name">NAME</label>
					<input type="text" name="name" id="name" class="input-text">
				</div>
				<div class="form-row">
					<label for="your_email">E-MAIL</label>
					<input type="email" name="email" id="your_email" class="input-text" required pattern="[^@]+@[^@]+.[a-zA-Z]{2,6}">
				</div>
        <div class="form-row">
					<label for="phone">Phone</label>
					<input type="number" name="phone" id="phone" class="input-text">
				</div>
				<div class="form-row">
					<label for="password">PASSWORD</label>
					<input type="password" name="password" id="password" class="input-text" required>
				</div>
				<div class="form-row">
					<label for="comfirm_password">CONFIRM PASSWORD</label>
					<input type="password" name="cpassword" id="comfirm_password" class="input-text" required>
				</div>
				<div class="form-row-last">
					<input type="submit" name="register" class="register" value="Register">
					<p>Or<a href="/getLogin">Sign in</a></p>
				</div>
			</form>
		</div>
	</div>
	<script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
	<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
	
