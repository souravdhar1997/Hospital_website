<!doctype html>
<html lang="en">
  <head>
  	<title><%= title %></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	
	<link rel="stylesheet" href="/UserLogin/css/style.css">

	<!-- Main Stylesheet -->
	<link rel="stylesheet" href="/css/style.css">

	<!-- theme meta -->
  <meta name="theme-name" content="novena" />

  <!-- Favicon -->
  <link rel="shortcut icon" type="image/x-icon" href="/images/favicon.png" />
<!-- essentials -->
  <link rel="stylesheet" href="/plugins/icofont/icofont.min.css">



	</head>

	<!-- navbar -->
	<%- include('./common/navbar.ejs')%>

	<body>
	<section class="ftco-section">
		<div class="container">
			
			<div class="row justify-content-center">
				<div class="col-md-7 col-lg-5">
					<div class="wrap">
						<div class="img" style="background-image: url(/UserLogin/images/bg-1.jpg);"></div>
						<div class="login-wrap p-4 p-md-5">
			      	<div class="d-flex">
			      		<div class="w-100">
			      			<h3 class="mb-4">User Sign In</h3>
			      		</div>
			      	</div>
						<!--flash  -->
						<% if(flashMessage1.length>0){ %>
							<div class="alert alert-success"><%= flashMessage1 %></div>
						<% } %>
							<% if(flashMessage2.length>0){ %>
							<div class="alert alert-danger"><%= flashMessage2 %></div>
							<% } %>
							<% if(flashMessage3.length>0){ %>
								<div class="alert alert-danger"><%= flashMessage3 %></div>
							<% } %>
							<% if(flashMessage5.length>0){ %>
								<div class="alert alert-info"><%= flashMessage5 %></div>
							<% } %>
							<form action="/login" method="post" class="signin-form">
			      		<div class="form-group mt-3">
			      			<input type="email" class="form-control" name="email" required>
			      			<label class="form-control-placeholder" for="email">Email</label>
			      		</div>
		            <div class="form-group">
		              <input id="password-field" type="password" class="form-control" name="password" required>
		              <label class="form-control-placeholder" for="password">Password</label>
		              <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
		            </div>
		            <div class="form-group">
		            	<button type="submit" class="form-control btn btn-primary rounded submit px-3">Sign In</button>
		            </div>
		            
		          </form>
		          <p class="text-center">Not a member? <a href="/getRegistration">Sign Up</a></p>
				  <a href="/forgotPassword">Forgot Password?</a>
              
            </div>
		      </div>
				</div>
			</div>
		</div>
	</section>

	<script src="/UserLogin/js/jquery.min.js"></script>
  <script src="/UserLogin/js/popper.js"></script>
  <script src="/UserLogin/js/bootstrap.min.js"></script>
  <script src="/UserLogin/js/main.js"></script>


  <!-- footer -->
 <div class="container mt-5">
	<%- include('./common/footer.ejs')%>
 </div>
